<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="TextViewWish" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewBottom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/selender</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textSize">@dimen/number_medium</item>
        <item name="android:background">@drawable/bg_bot_corner</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="TextViewTop" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/selender</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textSize">@dimen/number_large</item>
        <item name="android:background">@drawable/bg_top_corner</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewLeft" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/selender</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textSize">@dimen/number_large</item>
        <item name="android:background">@drawable/bg_left_corner</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewRight" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/selender</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textSize">@dimen/number_tiny</item>
        <item name="android:background">@drawable/bg_right_corner</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/_20dp</item>
        <item name="android:paddingLeft">@dimen/_6dp</item>
    </style>

    <style name="TextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">@color/md_grey_700</item>
        <item name="android:backgroundTint">@color/md_grey_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="RoundCornerImageView">
        <attr name="corner_radius" format="float" />
    </declare-styleable>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Widget.BaseProject.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.BaseProject.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Notification.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Notification.TextView.Bold" parent="Notification.TextView">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Notification.TextView.Normal" parent="Notification.TextView">
        <item name="android:fontFamily">@font/gilroy_normal</item>
    </style>

    <style name="Widget.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.TextView.Large" parent="Widget.TextView">
        <item name="android:layout_width">@dimen/_30dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:background">@drawable/bg_widget_textview</item>
    </style>

    <style name="Widget.TextView.Title1" parent="Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Title2" parent="Widget.TextView">
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="Widget.TextView.Small" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/gilroy_normal</item>
    </style>

    <style name="Notification.TextView.Large" parent="Notification.TextView">
        <item name="android:layout_width">@dimen/_30dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:background">@drawable/bg_widget_textview</item>
    </style>

    <style name="Notification.TextView.Small" parent="Notification.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/gilroy_normal</item>
    </style>

    <style name="Notification.TextView.Medium" parent="Notification.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/gilroy_normal</item>
    </style>

    <style name="Notification.TextView.Title" parent="Notification.TextView">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AboutTextView" parent="Widget.AppCompat.TextView">

    </style>

    <style name="AboutTextView.Header.Title" parent="AboutTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:padding">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
    </style>


    <style name="AboutTextView.Header.Content" parent="AboutTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>


    <style name="AboutTextView.Item.Title.First" parent="AboutTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:gravity">bottom</item>
    </style>


    <style name="AboutTextView.Item.Title.Second" parent="AboutTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="AboutTextView.Item.Title.Content" parent="AboutTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_marginTop">@dimen/_4dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
<!--        // Set the splash screen background, animated icon, and animation duration.-->
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>

<!--        // Use windowSplashScreenAnimatedIcon to add either a drawable or an-->
<!--        // animated drawable. One of these is required.-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/bg_solid_primary</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
<!--        # Required for-->
<!--        # animated icons-->

<!--        // Set the theme of the Activity that directly follows your splash screen.-->
        <item name="postSplashScreenTheme">@style/SplashTheme</item>
<!--        # Required.-->
    </style>

    <style name="LayoutItemCountLandscape">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="FeatureText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="TextViewHPNY">
        <item name="android:layout_width">@dimen/_200dp</item>
        <item name="android:layout_height">@dimen/_100dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/thuphap</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0</item>
    </style>
</resources>
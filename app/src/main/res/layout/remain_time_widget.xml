<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.BaseProject.AppWidget.Container"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.BaseProject.AppWidgetContainer"
    android:background="@drawable/bg_widget"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_6dp"
    android:paddingVertical="@dimen/_10dp"
    >
    <TextView
        style="@style/Widget.TextView.Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy new year"
        android:fontFamily="cursive"/>

    <TextView
        style="@style/Widget.TextView.Title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Còn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        >
        <TextView
            android:id="@+id/tv_widget_day"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:text="06"
            style="@style/Widget.TextView.Large"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.TextView.Small"
            android:text="Ngày"/>

        <TextView
            android:id="@+id/tv_widget_hour"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            style="@style/Widget.TextView.Large"
            android:layout_marginLeft="@dimen/_8dp"
            android:text="13"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.TextView.Small"
            android:text="Giờ"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        >
        <TextView
            android:id="@+id/tv_widget_minute"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            style="@style/Widget.TextView.Large"
            android:text="53"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.TextView.Small"
            android:text="Phút"/>

        <TextView
            android:id="@+id/tv_widget_second"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            style="@style/Widget.TextView.Large"
            android:layout_marginLeft="@dimen/_8dp"
            android:text="13"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.TextView.Small"
            android:text="Giây"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>
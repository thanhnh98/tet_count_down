<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
        tools:background="@color/color_bg_wish">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_icon_container"
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_feature_item">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_feature_icon"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_horoscope"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/FeatureText"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/ctl_icon_container"
            app:layout_constraintRight_toRightOf="@id/ctl_icon_container"
            app:layout_constraintTop_toBottomOf="@id/ctl_icon_container"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Feture name"
            android:layout_marginTop="@dimen/_4dp"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>